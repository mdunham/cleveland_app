<?xml version='1.0' encoding='utf-8'?>
<widget id="com.clevelandpetroleum.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Petrol Hub</name>
    <description>
        Driver application for Cleveland Drivers
    </description>
    <author email="matt@hotcoffeydesign.com" href="http://hotcoffeydesign.com">
        Hot Coffey Design
    </author>
    <content src="index.html" />
    <access origin="*" />
    <edit-config file="*-Info.plist" mode="merge" target="NSCameraUsageDescription">
        <string>For scanning truck barcodes</string>
    </edit-config>
    <edit-config file="*-Info.plist" mode="merge" target="NSLocationWhenInUseUsageDescription">
        <string>For tracking deliveries</string>
    </edit-config>
    <allow-navigation href="*" />
    <preference name="BackupWebStorage" value="local" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="SplashScreenDelay" value="4000" />
</widget>
